<header class="fixed top-0 left-0 w-full bg-white shadow-md z-50" x-data="mobileMenu()">
  <nav class="container mx-auto px-4 sm:px-6 py-4 sm:py-6 flex justify-between items-center">
    <a href="{{ route('home') }}" class="text-2xl font-bold text-primary">
      <img src="{{ asset('logo') }}" alt="Camydia Agency Logo" class="h-8 sm:h-10">
    </a>
    
    <div class="hidden md:flex space-x-6 lg:space-x-8">
      <a href="{{ route('home') }}" class="text-secondary hover:text-primary transition-colors duration-300 text-sm lg:text-base">Accueil</a>
      <a href="{{ route('about') }}" class="text-secondary hover:text-primary transition-colors duration-300 text-sm lg:text-base">Notre histoire</a>
      <a href="{{ route('services') }}" class="text-secondary hover:text-primary transition-colors duration-300 text-sm lg:text-base">Services</a>
      <a href="{{ route('contact') }}" class="text-secondary hover:text-primary transition-colors duration-300 text-sm lg:text-base">Contact</a>
    </div>

    <button 
      @click="toggle()"
      class="md:hidden text-secondary hover:text-primary transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primary/50 rounded p-1"
      aria-label="Menu"
      aria-expanded="false"
      :aria-expanded="open.toString()"
    >
      <svg x-show="!open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
      <svg x-show="open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </nav>

  <!-- Menu mobile -->
  <div 
    x-show="open"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 transform -translate-y-2"
    x-transition:enter-end="opacity-100 transform translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 transform translate-y-0"
    x-transition:leave-end="opacity-0 transform -translate-y-2"
    @click.away="close()"
    class="md:hidden bg-white border-t border-gray-200 shadow-lg"
    x-cloak
  >
    <div class="container mx-auto px-4 py-4 space-y-3">
      <a href="{{ route('home') }}" class="block text-secondary hover:text-primary transition-colors duration-300 py-2 font-medium" @click="close()">Accueil</a>
      <a href="{{ route('about') }}" class="block text-secondary hover:text-primary transition-colors duration-300 py-2 font-medium" @click="close()">Notre histoire</a>
      <a href="{{ route('services') }}" class="block text-secondary hover:text-primary transition-colors duration-300 py-2 font-medium" @click="close()">Services</a>
      <a href="{{ route('contact') }}" class="block text-secondary hover:text-primary transition-colors duration-300 py-2 font-medium" @click="close()">Contact</a>
    </div>
  </div>
</header>
