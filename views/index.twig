{% extends 'layout.twig' %}

{% block title %}Accueil - Camydia Agency{% endblock %}

{% block content %}
  <!-- Hero Section -->
  <section class="hero-content pt-24 md:pt-32 pb-16 md:pb-20 bg-gradient-to-br from-primary/10 to-accent/10 relative overflow-hidden">
    <div class="absolute inset-0 z-10">
      <img 
        src="{{ image('home', 'hero') }}" 
        alt="Camydia Agency" 
        class="w-full h-full object-cover md:object-right opacity-70 md:opacity-100"
        width="1200"
        height="800"
        loading="eager">
    </div>
    <div class="container mx-auto px-4 relative z-20">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-primary mb-4 md:mb-6 [text-shadow:_0_0_3px_white] md:[text-shadow:_0_0_1px_white]">
          Votre partenaire d'hôtesses professionnelles
        </h1>
        <p class="text-lg md:text-xl text-gray-900 mb-6 md:mb-8 [text-shadow:_0_0_1px_white] md:[text-shadow:none]">
          Découvrez notre expertise et notre engagement envers l'excellence pour tous vos événements
        </p>
        <a href="{{ route('contact') }}" class="inline-block bg-primary hover:bg-primary/90 text-white font-semibold px-6 py-3 md:px-8 md:py-4 rounded-lg transition-colors duration-300 transform hover:scale-105">
          Contactez-nous
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-12 sm:py-16 md:py-20">
    <div class="container mx-auto px-4 sm:px-6">
      <h2 class="text-2xl sm:text-3xl font-bold text-center text-primary mb-8 sm:mb-12">Nos Services Phares</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 sm:gap-8 service-card-container">
        <div class="bg-white p-5 sm:p-6 rounded-lg shadow-lg service-card transform transition-transform duration-300 hover:scale-105">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-primary/10 rounded-full flex items-center justify-center mb-3 sm:mb-4 mx-auto">
            <svg class="w-7 h-7 sm:w-8 sm:h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-semibold text-primary text-center mb-2 sm:mb-4">Événements Corporate</h3>
          <p class="text-secondary text-center text-sm sm:text-base">Professionnalisme et élégance pour vos événements d'entreprise</p>
        </div>

        <div class="bg-white p-5 sm:p-6 rounded-lg shadow-lg transform transition-transform duration-300 hover:scale-105">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-primary/10 rounded-full flex items-center justify-center mb-3 sm:mb-4 mx-auto">
            <svg class="w-7 h-7 sm:w-8 sm:h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-semibold text-primary text-center mb-2 sm:mb-4">Salons & Expositions</h3>
          <p class="text-secondary text-center text-sm sm:text-base">Une présence remarquable pour vos stands et accueils</p>
        </div>

        <div class="bg-white p-5 sm:p-6 rounded-lg shadow-lg transform transition-transform duration-300 hover:scale-105">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-primary/10 rounded-full flex items-center justify-center mb-3 sm:mb-4 mx-auto">
            <svg class="w-7 h-7 sm:w-8 sm:h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-semibold text-primary text-center mb-2 sm:mb-4">Événements VIP</h3>
          <p class="text-secondary text-center text-sm sm:text-base">Excellence et distinction pour vos réceptions prestigieuses</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-12 sm:py-16 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0 z-10">
      <img 
        src="{{ image('home', 'testimonials_bkg') }}" 
        alt="Testimonials background" 
        class="w-full h-full object-cover opacity-40 sm:opacity-60 md:opacity-100"
        loading="lazy"
        width="1000"
        height="600">
    </div>
    <div class="container mx-auto px-4 sm:px-6">
      <h2 class="text-2xl sm:text-3xl font-bold text-center text-primary mb-8 sm:mb-12 relative z-20">Ce que nos clients disent</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8 max-w-4xl mx-auto testimonials relative z-20">
        <div class="bg-white p-5 sm:p-6 rounded-lg shadow-lg transform transition-transform duration-300 hover:scale-105">
          <div class="flex items-start sm:items-center mb-4">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-accent/20 rounded-full flex items-center justify-center">
                <span class="text-accent font-semibold text-sm sm:text-base">MB</span>
              </div>
            </div>
            <div class="ml-3 sm:ml-4">
              <h4 class="text-base sm:text-lg font-semibold text-primary">Marie Bertrand</h4>
              <p class="text-secondary text-xs sm:text-sm">Directrice Marketing</p>
            </div>
          </div>
          <p class="text-secondary italic text-sm sm:text-base">"Un service exceptionnel ! Les hôtesses étaient parfaitement formées et ont contribué au succès de notre événement."</p>
        </div>

        <div class="bg-white p-5 sm:p-6 rounded-lg shadow-lg transform transition-transform duration-300 hover:scale-105">
          <div class="flex items-start sm:items-center mb-4">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-accent/20 rounded-full flex items-center justify-center">
                <span class="text-accent font-semibold text-sm sm:text-base">DS</span>
              </div>
            </div>
            <div class="ml-3 sm:ml-4">
              <h4 class="text-base sm:text-lg font-semibold text-primary">Djibril Secong</h4>
              <p class="text-secondary text-xs sm:text-sm">Organisateur d'événements</p>
            </div>
          </div>
          <p class="text-secondary italic text-sm sm:text-base">"Professionnalisme, élégance et efficacité. Camydia Agency est devenu notre partenaire de confiance pour tous nos événements."</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section py-12 sm:py-16 md:py-20 bg-gradient-to-r from-primary to-accent text-white">
    <div class="container mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl sm:text-3xl font-bold mb-4 sm:mb-6">Prêt à sublimer votre événement ?</h2>
      <p class="text-base sm:text-lg md:text-xl mb-6 sm:mb-8 opacity-90">Contactez-nous dès maintenant pour discuter de vos besoins</p>
      <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
        <a href="{{ route('contact') }}" class="bg-white text-primary hover:bg-white/90 font-semibold px-6 py-3 sm:px-8 sm:py-4 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-md">
          Demander un devis
        </a>
        <a href="{{ route('services') }}" class="border-2 border-white hover:bg-white/10 font-semibold px-6 py-3 sm:px-8 sm:py-4 rounded-lg transition-all duration-300 transform hover:scale-105">
          Nos services
        </a>
      </div>
    </div>
  </section>

  <!-- Partners Section -->
  <section class="py-12 sm:py-16 md:py-20">
    <div class="container mx-auto px-4 sm:px-6">
      <h2 class="text-2xl sm:text-3xl font-bold text-center text-primary mb-8 sm:mb-12">Nos Partenaires</h2>
      
      {% if partenaires|length > 0 %}
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-5 sm:gap-6 place-items-center">
          {# Ajustement : lg:grid-cols-5, xl:grid-cols-6 et gap un peu plus petit sur la plus petite taille #}
          {% for partenaire in partenaires %}
            <div class="w-full max-w-[160px] sm:max-w-[180px] aspect-square bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl 
                        flex items-center justify-center group transition-all duration-300 ease-in-out transform hover:scale-105">
              <img src="{{ partenaire.path }}" 
                   alt="Logo de {{ partenaire.name|capitalize }}" {# "Logo de X" est légèrement plus descriptif #}
                   class="max-w-full max-h-full object-contain p-3 sm:p-4"
                   loading="lazy"
                   width="150"  {# Taille indicative pour le navigateur, peut aider au pré-rendu #}
                   height="150">
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p class="text-center text-gray-500 dark:text-gray-400 py-8">
          Nos partenaires seront bientôt affichés ici. {# Message un peu plus engageant #}
        </p>
      {% endif %}
    </div>
  </section>
{% endblock %}
