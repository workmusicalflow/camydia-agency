<script>
function contactForm() {
    return {
        formData: {
            name: '',
            email: '',
            phone: '',
            subject: '',
            message: '',
            privacy: false
        },
        errors: {},
        isSubmitting: false,
        
        validateEmail(email) {
            const re = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(String(email).toLowerCase());
        },
        
        validatePhone(phone) {
            // Le téléphone est optionnel
            if (!phone || phone.trim() === '') return true;
            
            // Enlever les espaces pour faciliter la validation
            const cleanPhone = phone.replace(/\s+/g, '');
            
            // Différents formats de numéros ivoiriens acceptés
            const ivorianPatterns = {
                international: /^\+225[0-9]{9}$/, // +225XXXXXXXXX
                internationalWith00: /^00225[0-9]{9}$/, // 00225XXXXXXXXX
                local: /^0[0-9]{9}$/, // 0XXXXXXXXX (numéro local à 10 chiffres commençant par 0)
                localShort: /^[0-9]{9}$/ // XXXXXXXXX (numéro à 9 chiffres sans le 0 initial)
            };
            
            // Formats internationaux génériques
            const internationalGeneric = /^\+[1-9][0-9]{1,14}$/; // Format E.164 (numéro international commençant par +)
            const internationalGenericWith00 = /^00[1-9][0-9]{1,14}$/; // Variante avec 00 au lieu de +
            
            // Vérifier si c'est un numéro ivoirien
            const isIvorianNumber = 
                ivorianPatterns.international.test(cleanPhone) || 
                ivorianPatterns.internationalWith00.test(cleanPhone) ||
                ivorianPatterns.local.test(cleanPhone) ||
                ivorianPatterns.localShort.test(cleanPhone);
                
            // Vérifier si c'est un numéro international générique
            const isInternationalNumber = 
                internationalGeneric.test(cleanPhone) || 
                internationalGenericWith00.test(cleanPhone);
            
            // Accepter les numéros ivoiriens et internationaux valides
            return isIvorianNumber || isInternationalNumber;
        },
        
        validate() {
            this.errors = {};
            
            // Validation du nom
            if (!this.formData.name || this.formData.name.length < 3) {
                this.errors.name = 'Le nom doit contenir au moins 3 caractères.';
            }
            
            // Validation de l'email
            if (!this.formData.email) {
                this.errors.email = 'L\'email est requis.';
            } else if (!this.validateEmail(this.formData.email)) {
                this.errors.email = 'Veuillez entrer une adresse email valide.';
            }
            
            // Validation du téléphone (optionnel)
            if (this.formData.phone && !this.validatePhone(this.formData.phone)) {
                this.errors.phone = 'Veuillez entrer un numéro de téléphone au format international (+XXX XX XX XX XX).';
            }
            
            // Validation du sujet
            if (!this.formData.subject) {
                this.errors.subject = 'Veuillez sélectionner un sujet.';
            }
            
            // Validation du message
            if (!this.formData.message || this.formData.message.length < 10) {
                this.errors.message = 'Le message doit contenir au moins 10 caractères.';
            }
            
            // Validation de la politique de confidentialité
            if (!this.formData.privacy) {
                this.errors.privacy = 'Vous devez accepter la politique de confidentialité.';
            }
            
            return Object.keys(this.errors).length === 0;
        },
        
        submitForm(e) {
            // Validation côté client
            if (!this.validate()) {
                // Empêcher l'envoi du formulaire s'il y a des erreurs
                e.preventDefault();
                return;
            }
            
            // Si tout est valide, on active l'indicateur de chargement
            this.isSubmitting = true;
            
            // Soumettre le formulaire
            e.target.submit();
        }
    }
}
</script>
